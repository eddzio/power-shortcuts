
{
  "name": "Chrome Power Shortcuts",
  "version": "1.3",
  "manifest_version": 3,
  "author": "Ed Orozco",
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "pin_tab": {
      "suggested_key": {
        "default": "Alt+P",
        "mac": "MacCtrl+P"
      },
      "description": "Pin current tab"
    },
    "duplicate_tab": {
      "suggested_key": {
        "default": "Alt+D",
        "mac": "MacCtrl+D"
      },
      "description": "Duplicate current tab"
    },
    "close_other_tabs": {
      "suggested_key": {
        "default": "Alt+O",
        "mac": "MacCtrl+O"
      },
      "description": "Close other tabs"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

